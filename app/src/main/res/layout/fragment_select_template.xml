<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.meme_templates.SelectTemplateFragment">



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="?attr/colorPrimaryVariant"
        app:cardCornerRadius="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/center_line"
        android:padding="16dp">


        <ImageView
            android:id="@+id/img_view"
            android:layout_width="800px"
            android:layout_height="800px"
            android:layout_centerInParent="true"
            android:src="@drawable/cigar"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="crop"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:layout_gravity="bottom|left"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"/>



    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/center_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="260dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="?attr/colorPrimaryVariant"
        app:cardCornerRadius="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/center_line"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/input_template_name"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:hint="filename"
                android:inputType="text"
                android:layout_marginTop="16dp"/>


            <Button
                android:id="@+id/btn_save_template"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"/>


            <Button
                android:id="@+id/btn_load_template"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load image"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"/>


        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>