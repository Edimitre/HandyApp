<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.work_related.FilesFragment">

    <RelativeLayout
        android:id="@+id/mini_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryVariant">

        <Button
            android:id="@+id/btn_generate_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="generate file"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            tools:ignore="SmallSp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/files_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mini_toolbar"
        android:paddingTop="3dp"/>

</RelativeLayout>